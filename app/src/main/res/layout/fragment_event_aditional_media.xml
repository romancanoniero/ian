                        android:layout_height="@dimen/box_normal"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1">

                        <de.hdodenhof.circleimageview.CircleImageView

                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:cropToPadding="true"
                            android:src="@color/colorPrimary"
                            app:civ_circle_background_color="@color/colorPrimary"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView

                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_margin="6dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHeight_percent=".5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent=".5"
                            app:srcCompat="@drawable/ic_video_camera"
                            app:tint="@color/white" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/controls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/media_recyclerview"
                    android:layout_alignBottom="@id/linear_controls"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"

                        tools:layout_editor_absoluteX="36dp">

                        <com.devlomi.record_view.RecordLockView
                            android:id="@+id/record_lock"
                            android:layout_width="@dimen/box_normal"
                            android:layout_height="@dimen/box_normal"
                            android:layout_above="@id/record_button"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="50dp" />

                        <com.devlomi.record_view.RecordView
                            android:id="@+id/record_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toLeftOf="@id/record_button"
                            app:counter_time_color="#ff0000"
                            app:slide_to_cancel_arrow="@drawable/recv_ic_arrow"
                            app:slide_to_cancel_arrow_color="#000000"
                            app:slide_to_cancel_bounds="8dp"
                            app:slide_to_cancel_margin_right="10dp"
                            app:slide_to_cancel_text="Slide To Cancel" />

                        <com.devlomi.record_view.RecordButton
                            android:id="@+id/record_button"
                            android:layout_width="@dimen/box_normal"
                            android:layout_height="@dimen/box_normal"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/recv_bg_mic"
                            android:backgroundTint="@color/colorPrimary"
                            android:scaleType="centerInside"
                            app:mic_icon="@drawable/recv_ic_mic_white"
                            app:scale_up_to="1.5" />


                    </RelativeLayout>
                </RelativeLayout>
