        <com.github.captain_miao.optroundcardview.OptRoundCardView
            android:id="@+id/media_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardBackgroundColor="#f8f8f8"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:contentPaddingLeft="12dp"
            app:contentPaddingRight="12dp"
            app:optRoundContentPaddingBottom="6dp"
            app:optRoundCardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/media_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:minHeight="@dimen/box_big"
                    android:orientation="horizontal"
                    app:layoutManager="LinearLayoutManager"
                    app:spanCount="1"
                    tools:itemCount="10"
                    tools:listitem="@layout/item_multimedia_adapter" />

                <com.visualizer.amplitude.AudioRecordView
                    android:id="@+id/audioRecordView"
                    android:layout_width="256dp"
                    android:layout_height="0dp"

                    android:layout_below="@id/media_recyclerview"
                    android:layout_alignBottom="@id/controls"
                    android:layout_alignParentBottom="false"
                    android:elevation="10dp"
                    app:chunkAlignTo="center"
                    app:chunkColor="@color/blue"
                    app:chunkMaxHeight="48dp"
                    app:chunkMinHeight="2dp"
                    app:chunkRoundedCorners="true"
                    app:chunkSoftTransition="true"
                    app:chunkSpace="1dp"
                    app:chunkWidth="2dp" />

                <!--
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@id/media_recyclerview"
