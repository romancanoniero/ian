<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_arrows"
                android:layout_width="@dimen/box_normal"
                android:layout_height="@dimen/box_normal"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle_primary_color"
                android:src="@drawable/ic_chevron_left"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/loginTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/muli"
                    android:text="@string/create_your_pin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_subheading"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/legend_line_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/muli"
            android:lineSpacingExtra="14sp"
            android:text="@string/create_your_pin_legend"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_size_paragraph"
android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/legend_line_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/muli"
            android:text="@string/create_your_pin_legend_line2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_paragraph"
            android:visibility="gone"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/legend_line_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/muli"
            android:text="@string/create_your_pin_legend_line3"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_paragraph"
            android:visibility="gone"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/choose_your_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/muli_bold"
            android:gravity="center_horizontal"
            android:text="@string/choose_your_pin"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_paragraph"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.mukesh.OtpView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:OtpItemCount="4"
            app:OtpItemHeight="@dimen/otp_item_height"
            app:OtpItemRadius="4dp"
            app:OtpItemSpacing="10dp"
            app:OtpItemWidth="@dimen/otp_item_height"
            app:OtpLineColor="@color/gray_400"
            app:OtpState_filled="true"
            app:OtpViewType="rectangle"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginTitle2"
            tools:ignore="SpeakableTextPresentCheck" />


        <View
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="6"
            android:gravity="bottom"
            android:orientation="vertical">


        </View>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/primary_button_border"
            android:foregroundGravity="bottom"
            android:textColor="@color/primary_button_text_color"
            android:textSize="@dimen/text_size_subparagraph"
            android:text="@string/lets_continue"
         />


    </LinearLayout>

</layout>