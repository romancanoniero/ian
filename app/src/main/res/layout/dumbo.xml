<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_main_activity"
    android:padding="16dp">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/profile_dummy" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile_picture"
        android:layout_marginStart="16dp"
        android:text="Aida Bugg"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/sos_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_shape_filled"
        android:backgroundTint="@color/white"
        android:src="@drawable/sos_in_main_image"
        android:scaleType="fitCenter"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contact_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sos_button"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        tools:orientation="horizontal"
        tools:itemCount="5"
        tools:listitem="@layout/item_speed_dial_adapter" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <!-- Add menu items here -->
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>
