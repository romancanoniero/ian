            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clear_all"
            tools:itemCount="10"
            tools:listitem="@layout/item_notification_adapter" />

