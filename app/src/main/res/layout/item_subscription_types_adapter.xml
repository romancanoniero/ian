<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/main_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="4dp"
        android:paddingBottom="10dp"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="7dp"
            android:orientation="vertical"
            >

            <com.github.captain_miao.optroundcardview.OptRoundCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardPreventCornerOverlap="false"
                app:cardElevation="12dp"
                app:optRoundCardLeftTopCorner="true"
                app:optRoundCardRightTopCorner="true"
                app:optRoundCardLeftBottomCorner="false"
                app:optRoundCardRightBottomCorner="false"
                app:optRoundCardCornerRadius="12dp"
                >

                <TextView
                    android:id="@+id/plan_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dialog_background"
                    android:gravity="center_horizontal"
                    android:shadowColor="@color/gray"
                    android:shadowRadius="12"
                    android:text="SOLIDARIO"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_heading" />


            </com.github.captain_miao.optroundcardview.OptRoundCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="start"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/functionality_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:drawablePadding="10dp"
                            android:gravity="start"
                            android:text="Boton SOS"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_paragraph"
                            app:drawableStartCompat="@drawable/check_iam_white_small" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/functionality_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:drawablePadding="10dp"
                            android:gravity="center_horizontal"
                            android:text="Pulsador Habilitado"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_paragraph"
                            app:drawableStartCompat="@drawable/check_iam_white_small" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/functionality_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="10dp"
                            android:drawablePadding="10dp"
                            android:gravity="start"
                            android:text="Publicacion de Otros Eventos"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_paragraph"
                            app:drawableStartCompat="@drawable/check_iam_white_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/functionality_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="10dp"

                            android:drawablePadding="10dp"
                            android:gravity="left"
                            android:text="Funcion de acompaÃ±amiento"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_paragraph"
                            app:drawableStartCompat="@drawable/check_iam_white_small" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/functionality_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="10dp"

                            android:drawablePadding="10dp"
                            android:gravity="left"
                            android:text="Seguimiento de Eventos on Line"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_paragraph"
                            app:drawableStartCompat="@drawable/check_iam_white_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/functionality_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="10dp"

                            android:drawablePadding="10dp"
                            android:gravity="left"
                            android:text="Control de Caidas"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_paragraph"
                            app:drawableStartCompat="@drawable/check_iam_white_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="14dp">


                        <TextView
                            android:id="@+id/functionality_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="10dp"

                            android:drawablePadding="10dp"
                            android:gravity="left"
                            android:text="Notificacion de acciones solidarias"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_paragraph"
                            app:drawableStartCompat="@drawable/check_iam_white_small" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buy_button"
                style="@style/SecondaryButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/check_iam"
                android:fontFamily="@font/muli_extrabold"
                android:gravity="center"
                android:text="@string/select"
                android:textColor="@color/secondary_button_text_color"
                android:textSize="@dimen/text_size_paragraph"
                android:visibility="gone" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/gray_600" />

</androidx.appcompat.widget.LinearLayoutCompat>