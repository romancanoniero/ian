<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#f9f9f9"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="true"

        app:contentPadding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_image"
                    android:layout_width="@dimen/circle_5"
                    android:layout_height="@dimen/circle_5"
                    android:elevation="6dp"
                    android:src="@drawable/profile_dummy"
                    app:civ_border_color="@color/colorGrey50"
                    app:civ_border_overlay="true"
                    app:civ_border_width="1dp"
                    app:civ_circle_background_color="#AAA9A9"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="Romulo"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_paragraph"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/additional_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/is_creator" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/battery_status_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/battery_frame"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/box_xxsmall"
                        app:layout_constraintDimensionRatio="v,1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_battery_level" />

                    <ProgressBar
                        android:id="@+id/progress_battery"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginVertical="3dp"
                        android:progress="50"
                        app:layout_constraintEnd_toEndOf="@+id/battery_frame"
                        app:layout_constraintStart_toStartOf="@+id/battery_frame"
                        app:layout_constraintTop_toTopOf="@+id/battery_frame"
                        app:layout_constraintBottom_toBottomOf="@+id/battery_frame"
                        android:progressDrawable="@drawable/progress_bar_custom"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="top|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/going_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha=".5"
                    android:background="@drawable/bg_small_button_transluscent_red"
                    android:drawablePadding="6dp"
                    android:padding="4dp"
                    android:text="@string/is_going"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_subparagraph"
                    android:visibility="gone"
                    app:drawableStartCompat="@drawable/ic_double_tick"
                    app:drawableTint="@color/red" />

                <TextView
                    android:id="@+id/already_called_indictator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha=".5"
                    android:background="@drawable/bg_small_button_transluscent_yellow"
                    android:drawablePadding="6dp"
                    android:padding="4dp"
                    android:text="Call  done"
                    android:textColor="@color/material_green500"
                    android:textSize="@dimen/text_size_subparagraph"
                    android:visibility="gone"
                    app:drawableStartCompat="@drawable/ic_double_tick"
                    app:drawableTint="@color/material_green500" />

                <TextView
                    android:id="@+id/status_indictator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_small_button_transluscent_red"
                    android:drawablePadding="6dp"
                    android:padding="4dp"
                    android:text="No responde"
                    android:textColor="@color/material_green500"
                    android:textSize="@dimen/text_size_subparagraph"
                    app:drawableStartCompat="@drawable/ic_double_tick"
                    app:drawableTint="@color/material_green500" />

                <TextView
                    android:id="@+id/following_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:background="@drawable/bg_small_button_transluscent_gray"
                    android:drawablePadding="6dp"
                    android:gravity="end"
                    android:padding="4dp"
                    android:text="@string/invited"
                    android:textColor="@color/material_grey400"
                    android:textSize="@dimen/text_size_subparagraph"
                    />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/gray_600" />

</LinearLayout>