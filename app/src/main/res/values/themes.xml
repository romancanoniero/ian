<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.IAN" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.IAN" parent="Base.Theme.IAN">
        <item name="android:navigationBarColor">@android:color/black</item>
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="cardViewStyle">@style/MyCardViewStyle</item>
        <item name="android:windowAnimationStyle">@style/MyWindowAnimationStyle</item>
        <item name="android:statusBarColor">#ff0000</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowBackground">@color/activityBackground</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewAppTheme</item>
        <item name="android:fontFamily">@font/app_font_family</item>
        <item name="android:textSize">@dimen/text_size_paragraph</item>

        <item name="android:textColor">@color/text_color</item>
        <item name="android:textViewStyle">@style/myTextView</item>
        <item name="materialButtonStyle">@style/PrimaryButton</item>
        <item name="android:buttonStyle">@style/PrimaryButton</item>
        <item name="android:buttonStyleToggle">@style/MyToggleButtonStyle</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>


    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="AutoCompleteTextViewAppTheme" parent="Base.Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/app_font_family</item>
        <item name="fontFamily">@font/app_font_family</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
        //another attributes
    </style>

    <style name="MyToggleButtonStyle" parent="android:Widget.Button.Toggle">
        <item name="android:minHeight">@dimen/box_small</item>
        <item name="android:textSize">@dimen/text_size_paragraph</item>
        <item name="android:background">@drawable/bg_toggle_button</item>
        <item name="android:textColor">@drawable/fg_toggle_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxWidth">183dp</item>
    </style>

    <style name="TitleCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay_card_title_custom_corners
        </item>
    </style>

    <style name="ShapeAppearanceOverlay_card_title_custom_corners" parent="">

        <item name="cardBackgroundColor">#f9f9f9</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">26dp</item>
        <item name="cornerSizeBottomLeft">26dp</item>
    </style>

    <style name="ActionsCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay_card_actions_custom_corners
        </item>
    </style>


    <style name="ShapeAppearanceOverlay_card_actions_custom_corners" parent="">
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">26dp</item>
        <item name="cornerSizeTopLeft">26dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Title3" parent="@android:style/Theme">
        <item name="fontFamily">@font/muli_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="InputText" parent="@android:style/Theme">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="myTextView" parent="android:Widget.TextView">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_paragraph</item>
    </style>


    <style name="CustomButton" parent="@android:style/Theme">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_paragraph</item>
        <item name="elevation">6dp</item>
        <item name="android:minHeight">@dimen/button_2</item>

    </style>

    <style name="PrimaryButton" parent="CustomButton">
        <item name="android:textColor">@drawable/fg_button_primary</item>
        <item name="android:background">@drawable/primary_button_border</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="SecondaryButton" parent="CustomButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="SmallPrimaryButton" parent="PrimaryButton">
        <item name="android:textColor">@drawable/fg_button_primary</item>
        <item name="android:background">@drawable/primary_button_border</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_subparagraph</item>
        <item name="android:minHeight">@dimen/thumb_size</item>
        <item name="android:minWidth">80dp</item>
        <item name="layout_gravity">center_vertical</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="SmallSecondaryButton" parent="SecondaryButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="layout_gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/thumb_size</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>


        <item name="android:textColor">@drawable/fg_button_secondary</item>
        <item name="android:background">@drawable/secondary_button_border</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_subparagraph</item>

    </style>


    <style name="SmallPrimaryButtonShimmer" parent="PrimaryButton">
        <item name="android:textColor">@drawable/fg_button_primary</item>
        <item name="android:background">@color/shimmerColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_subparagraph</item>
        <item name="android:minHeight">@dimen/thumb_size</item>
        <item name="android:minWidth">80dp</item>
        <item name="layout_gravity">center_vertical</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>

    </style>

    <style name="MaterialOutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:labelTextSize">@dimen/text_size_paragraph</item>
        <item name="android:height">@dimen/dimen_55dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="borderWidth">12dp</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:paddingBottom">@dimen/dimen_1dp</item>
        <item name="android:paddingTop">@dimen/dimen_1dp</item>
        <item name="android:textColorHint">@color/darkGray</item>
        <item name="hintTextColor">@color/darkGray</item>
        <item name="hintTextAppearance">@style/TextAppearance.TextInputLayoutOutlined</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxStrokeColor">@color/stroke_color</item>
        <item name="boxStrokeWidth">.5dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_6dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_6dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_6dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_6dp</item>
        <item name="android:textAllCaps">true</item>

        <!--        <item name="materialThemeOverlay">@style/MyThemeOverlayFilledPadding</item> -->
    </style>


    <style name="CustomTILHint" parent="TextAppearance.Design.Hint">

    </style>

    <style name="MaterialTextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:minHeight">@dimen/dimen_55dp</item>
        <item name="android:textColorHint">@color/gray_400</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:textSize">@dimen/text_size_paragraph</item>
        <item name="android:paddingTop">@dimen/dimen_16dp</item>
        <item name="android:paddingBottom">@dimen/dimen_16dp</item>

    </style>

    <!-- Bottom Sheet -->
    <style name="CardViewStyleFromBottom" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay_card_title_custom_corners_from_bottom
        </item>
    </style>

    <style name="ShapeAppearanceOverlay_card_title_custom_corners_from_bottom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">26dp</item>
        <item name="cornerSizeTopLeft">26dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <style name="TextAppearance.TextInputLayoutOutlined" parent="">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">@dimen/text_size_paragraph</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="font_regular" parent="@android:style/Theme">
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <style name="font_bold" parent="@android:style/Theme">
        <item name="fontFamily">@font/rubik_bold</item>
    </style>

    <style name="font_black" parent="@android:style/Theme">
        <item name="fontFamily">@font/rubik_black</item>
    </style>


    <style name="FullScreenDialogStyle">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Theme.IAN.Fullscreen" parent="Theme.IAN">
        <item name="android:actionBarStyle">@style/Widget.Theme.IAN.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.IAN.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>


    <style name="MyWindowAnimationStyle">
        <item name="android:activityOpenEnterAnimation">@anim/enter_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/exit_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/enter_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_to_right</item>
    </style>

    <style name="MyCardViewStyle" parent="CardView">
        <!-- Personaliza tu CardView aquí. Por ejemplo: -->
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="MyCircleImageViewStyle">
        <item name="civ_border_width">1dp</item>
        <item name="civ_border_color">#E1DEDE</item>
        <item name="civ_circle_background_color">@color/white</item>
    </style>

    <dimen name="thumb_size">64dp</dimen>
    <color name="stroke_color">#C1C1C1</color>


        <style name="EventsSelectionCustomCardViewStyle" parent="Widget.MaterialComponents.CardView">
            <item name="shapeAppearance">@style/CustomShapeAppearance</item>
        </style>

        <style name="CustomShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSizeTopLeft">0dp</item>
            <item name="cornerSizeTopRight">0dp</item>
            <item name="cornerSizeBottomLeft">16dp</item>
            <item name="cornerSizeBottomRight">16dp</item>
        </style>

</resources>