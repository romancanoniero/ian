<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundedView">
        <attr name="topLeftCornerRadius" format="dimension" />
        <attr name="topRightCornerRadius" format="dimension" />
        <attr name="bottomLeftCornerRadius" format="dimension" />
        <attr name="bottomRightCornerRadius" format="dimension" />
    </declare-styleable>

    <attr name="hintText" format="string" />
    <attr name="highlightSelected" format="boolean" />
    <attr name="highlightColor" format="color" />
    <attr name="textColor" format="color" />
    <attr name="clearText" format="string" />

    <declare-styleable name="MultiSpinnerSearch">
        <attr name="hintText" />
        <attr name="highlightSelected" />
        <attr name="highlightColor" />
        <attr name="textColor" />
        <attr name="clearText" />
    </declare-styleable>
    <declare-styleable name="SingleSpinnerSearch">
        <attr name="hintText" />
        <attr name="highlightSelected" />
        <attr name="highlightColor" />
        <attr name="textColor" />
        <attr name="clearText" />
    </declare-styleable>
</resources>