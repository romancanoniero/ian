<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            <size />
            <corners android:radius="12dp" />
            <stroke android:width="3px" android:color="@color/gray_600" />
            <gradient android:angle="270" android:centerColor="#C90D1E" android:endColor="#AF0A1B" android:startColor="#E51022" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            <size />
            <corners android:radius="12dp" />
            <stroke android:width="3px" android:color="@color/gray_dark" />
            <solid android:color="@color/white" />
            <gradient android:angle="270" android:centerColor="#FDFAFA" android:endColor="#E3E3E3" android:startColor="#D6D5D5" />

        </shape>
    </item>


</selector>